<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/primary_text</item>-->
        <!--<item name="android:textColorSecondary">@color/secondary_text</item>-->
        <!--<item name="android:alertDialogTheme">@style/AlertDialog.AppCompat.Light</item>-->
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark"></style>

    <style name="TextView.Grey" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Grey.Large" parent="TextView.Grey">
        <item name="android:textSize">14sp</item>

        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextView.Blue" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/listTextColorBlue</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextView.Blue.Large" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/listTextColorBlue</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="EditText" >
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/listTextColorBlue</item>
    </style>

    <style name="BlueTextApperance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/listTextColorBlue</item>

    </style>


    <style name="GreyTextApperance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/listTextColorGrey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="textInputLayoutLogin" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/listTextColorBlue</item>
    </style>

</resources>
